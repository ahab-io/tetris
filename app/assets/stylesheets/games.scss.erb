.cs-home-page {
  width: 100%;
  height: 100%;
  background-image: url(<%= asset_path 'tetris-home.jpg' %>);
  background-size: 100% 100%;
}

.cs-player-select {
  width: 32.5%;
  &:hover {
    background-color: darkslategrey;
    opacity: 0.3;
    cursor: pointer;
  }
}

.cs-player-box {
  height: 100%;
  display: inline-block;
}

.cs-player-box-grid {
  width: calc(70% - 2.5px);
  box-sizing: border-box;
  padding: 5%;
}

.cs-player-box-info {
  width: calc(30% - 2.5px);
  box-sizing: border-box;
  padding: 5%;
}

.cs-player-box-grid {

  .cs-hidden td {
    padding: 0;
  }

  tr:not(.cs-hidden) td {
    border: 1px solid black;
  }

}
